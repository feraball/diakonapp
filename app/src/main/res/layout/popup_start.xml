<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="550dp"
    android:layout_gravity="center">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/startPopImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/inicio1" />

        <ImageView
            android:id="@+id/closeStartPop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/startPopImg"
            app:layout_constraintTop_toTopOf="@+id/startPopImg"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <Button
            android:id="@+id/anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Before"
            app:layout_constraintBottom_toBottomOf="@+id/siguiente"
            app:layout_constraintStart_toStartOf="@+id/startPopImg"
            app:layout_constraintTop_toBottomOf="@+id/startPopImg"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Next"
            app:layout_constraintEnd_toEndOf="@+id/startPopImg"
            app:layout_constraintTop_toBottomOf="@+id/closeStartPop" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>